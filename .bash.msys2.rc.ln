alias msbuild='msbuild.exe'

# I'm using the Windows build of Mercurial from msys2 but the latter eats hg colors.
# winpty fixes that.
if hash winpty 2>/dev/null; then
    alias hg='winpty hg'
    alias msbuild='winpty msbuild.exe'
fi

# Fix weird punctuation characters in man under rxvt
export LANG=en_US
# And mintty + tmux
export LC_ALL=C
